<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GTAC AIR</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GTAC AIR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Aeronaves", "Index", "Aircraft")</li>
                    <li>@Html.ActionLink("Componentes", "Index", "Component")</li>
                    <li>@Html.ActionLink("Tripulantes", "Index", "Crew")</li>
                    <li>@Html.ActionLink("Usuários", "CreateUser", "Account")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav navbar-text h4">Olá @Request.GetOwinContext().Authentication.User.Identity.Name</li>
                        <li class="h4">@Html.ActionLink("Sair", "Logoff", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Fazer Login", "Login", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
